<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to AGU Course Review</h1>
            <p>View students' hand-picked courses from all departments</p>
            <p>
                 <a class="btn btn-primary btn-lg" href="/courses/new">Add New Course</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% courses.forEach(function (course) { %>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail>">
            <img src="<%= course.image%>" class="img-responsive">
        </div>
            <div class="caption">
            <h4><%= course.name %></h4>
        </div>
        <p>
            <a href="/courses/<%= course._id%>" class="btn btn-primary">More info</a>
        </p>
    </div>
    <% }); %>
    </div>
</div>

<% include ../partials/footer %>
