<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%= course.name %></h1>

        <div style="width:30%; margin: 25px auto;">

            <form action="/courses/<%= course._id %>?_method=PUT" method="POST" id="courseEditForm">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= course.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%= course.image %>">
                </div>
                <div class="form-group">
                    <textarea id="courseEditform" cols="47" rows ="10" name="description"><%= course.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block">Submit</button>
                </div>
            </form>
        </div>

        <a href="/courses">Go back</a>
    </div>
</div>

<% include ../partials/footer %>
