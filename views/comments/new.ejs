<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Add New Comment to <%= course.name %></h1>

        <div style="width:30%; margin: 25px auto;">
            <form action="/courses/<%= course._id%>/comments" id="commentform" method="POST">
                <div class="form-group">
                    <textarea id="commentform" cols="47" rows ="10" name="text"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block">Submit</button>
                </div>
            </form>
        </div>

        <a href="/courses">Go back</a>
    </div>
</div>

<% include ../partials/footer %>
