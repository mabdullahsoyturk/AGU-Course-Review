<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/courses/<%= course_id %>/comments/<%= comment._id %>?_method=PUT" method="POST" id="commentEditForm">
                <div class="form-group">
                    <textarea id="commentEditForm" cols="47" rows ="10" name="text"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/courses">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>